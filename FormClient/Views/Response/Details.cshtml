@model FormAPI.DTO.ResponseDto

@{
    ViewData["Title"] = "Response Details";
}

<h2>Response Details</h2>

<div>
    <h4>Response</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Response ID</dt>
        <dd class="col-sm-10">@Model.ResponseId</dd>
        <dt class="col-sm-2">Form ID</dt>
        <dd class="col-sm-10">@Model.FormId</dd>
        <dt class="col-sm-2">Staff ID</dt>
        <dd class="col-sm-10">@Model.StaffId</dd>
        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ResponseId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
