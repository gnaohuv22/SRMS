@model FormAPI.DTO.FormDto

@{
    ViewData["Title"] = "Form Details";
}

<h2>Form Details</h2>

<div>
    <h4>Form</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Form ID</dt>
        <dd class="col-sm-10">@Model.FormId</dd>

        <dt class="col-sm-2">Student Email</dt>
        <dd class="col-sm-10">@Model.StudentEmail</dd>

        <dt class="col-sm-2">Category Name</dt>
        <dd class="col-sm-10">@Model.CategoryName</dd>

        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.Subject</dd>

        <dt class="col-sm-2">Content</dt>
        <dd class="col-sm-10">@Model.Content</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt</dd>

        <dt class="col-sm-2">Updated At</dt>
        <dd class="col-sm-10">@Model.UpdatedAt</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.FormId" class="btn btn-primary">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
